{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "docsy/hero-block",
	"version": "0.1.0",
	"title": "Hero Block",
	"category": "theme",
	"icon": "hero",
	"description": "Example block scaffolded with Create Block tool.",
	"example": {},
	"supports": {
		"html": false
	},
	"textdomain": "docsy",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js",
	"attributes": {
		"title": {
			"type": "string",
			"default": "How can we help you?"
		},
		"subtitle": {
			"type": "string",
			"default": "Search our knowledge base for answers"
		},
		"showSearch": {
			"type": "boolean",
			"default": true
		},
		"placeholder": {
			"type": "string",
			"default": "Search for articles..."
		},
		"backgroundColor": {
			"type": "string",
			"default": "#1d4ed8"
		},
		"titleColor": {
			"type": "string",
			"default": "#fff"
		},
		"subtitleColor": {
			"type": "string",
			"default": "#c7d2fe"
		},
		"padding": {
			"type": "string",
			"default": "4rem 1rem"
		},
		"borderRadius": {
			"type": "string",
			"default": "0px"
		},
		"boxShadow": {
			"type": "string",
			"default": "none"
		},
		"textAlign": {
			"type": "string",
			"default": "center"
		},
		"searchInputBg": {
			"type": "string",
			"default": "#fff"
		}
	}
}